    xmlns:common="http://www.alliander.com/schemas/osgp/common/2014/10"
    xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
    xmlns:tns="http://www.alliander.com/definitions/osgp/smartmetering/sm-monitoring-v1.0"
    targetNamespace="http://www.alliander.com/definitions/osgp/smartmetering/sm-monitoring-v1.0">
        
    <wsdl:types>
        <xsd:schema 
            targetNamespace="http://www.alliander.com/definitions/osgp/smartmetering/sm-monitoring/imports" 
            xmlns:xsd="http://www.w3.org/2001/XMLSchema">
            
            <xsd:import 
                namespace="http://www.alliander.com/schemas/osgp/smartmetering/sm-monitoring/2014/10" 
                schemaLocation="schemas/sm-monitoring.xsd" />
        </xsd:schema>
    </wsdl:types>    

    <wsdl:message name="RequestPeriodicDataHeader">
        <wsdl:part element="common:OrganisationIdentification" name="OrganisationIdentification" />
        <wsdl:part element="common:UserName" name="UserName" />
		<wsdl:part element="common:ApplicationName" name="ApplicationName" />
    </wsdl:message>
    <wsdl:message name="RequestPeriodicDataResponse">
        <wsdl:part element="sminst:RequestPeriodicDataResponse" name="RequestPeriodicDataResponse">
        </wsdl:part>
    </wsdl:message>
    <wsdl:message name="RequestPeriodicDataRequest">
        <wsdl:part element="sminst:RequestPeriodicDataRequest" name="RequestPeriodicDataRequest">
        </wsdl:part>
    </wsdl:message>
    
    <wsdl:portType name="SmartmeterMonitoringPort">
   
        <wsdl:operation name="RequestPeriodicData">
            <wsdl:input message="tns:RequestPeriodicDataRequest" name="RequestPeriodicDataRequest">
            </wsdl:input>
            <wsdl:output message="tns:RequestPeriodicDataResponse" name="RequestPeriodicDataResponse">
            </wsdl:output>
        </wsdl:operation>

