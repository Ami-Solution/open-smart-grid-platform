        <wsdl:operation name="RequestPeriodicData">
            <soap:operation soapAction="" />
            <wsdl:input name="RequestPeriodicDataRequest">
                <soap:header message="tns:RequestPeriodicDataHeader" part="OrganisationIdentification" use="literal" />
                <soap:header message="tns:RequestPeriodicDataHeader" part="UserName" use="literal" />
				<soap:header message="tns:RequestPeriodicDataHeader" part="ApplicationName" use="literal" />
                <soap:body use="literal" />
            </wsdl:input>
            <wsdl:output name="RequestPeriodicDataResponse">
                <soap:body use="literal" />
            </wsdl:output>
        </wsdl:operation>

    </wsdl:binding>
    <wsdl:service name="SmartmeterMonitoringPortService">
        <wsdl:port binding="tns:SmartmeterMonitoringPortSoap11" name="SmartmeterMonitoringPortSoap11">
            <soap:address
                location="http://localhost:8080/osgp-adapter-ws-smartmetering/smartMetering/MonitoringService/" />
        </wsdl:port>
    </wsdl:service>
