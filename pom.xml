<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.alliander.osgp</groupId>
    <artifactId>shared-components</artifactId>
    <version>0.11.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>shared</name>
    <!-- Description, Organization, Licences, URL and Distribution Management elements are needed for the maven-jxr-plugin to generate a maven site -->
    <description>Shared Components for OSGP and Protocol Adapters.</description>
    <organization>
        <name>OSGP</name>
        <url>https://osgplatform.wordpress.com</url>
    </organization>
    <licenses>
        <license>
            <name>APACHE 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
        </license>
    </licenses>
    <!-- URL is passed in as a maven argument: -Durl=http://my/url/for/the/site -->
    <url>${project.url}</url>
    <distributionManagement>
        <site>
            <id>shared-components</id>
            <name>shared-components</name>
            <!-- <url>Use this example URL to generate maven site locally and have it deployed to a folder using: mvn site site:deploy or mvn site site:stage -->
            <!-- <url>file:///C:/Users/Kevin/Desktop/shared-components</url> -->
            <!-- URL is passed in as a maven argument: -DdistributionManagement.site.url=file:////the/path/to/deploy/the/site/to -->
            <url>${project.distributionManagement.site.url}</url>
        </site>
    </distributionManagement>

    <modules>
        <!-- Shared Libs -->
        <module>parent-shared</module>
        <module>shared</module>
        <module>osgp-dto</module>
    </modules>
</project>
